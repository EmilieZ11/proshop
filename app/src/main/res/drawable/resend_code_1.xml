        <shape android:shape="rectangle">
            <solid android:color="@color/hover_1" />
            <corners android:radius="7dp" />
            <stroke
                android:width="1dp"
                android:color="@color/loginET" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/TP" />
            <corners android:radius="7dp" />
            <stroke
                android:width="1dp"
                android:color="@color/loginET" />
        </shape>
    </item>
</selector>