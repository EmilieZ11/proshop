<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/banner_1" />
            <corners android:topRightRadius="@dimen/card_radius" />
        </shape>
    </item>
    <item
        android:bottom="-45dp"
        android:right="-45dp"
        android:top="0dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/card_1" />
                <size
                    android:width="150dp"
                    android:height="150dp" />
            </shape>
        </rotate>
    </item>
</layer-list>